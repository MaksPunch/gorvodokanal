extends ../layout.pug

block style 
    style 
        include sectionPage.css

block aside
    .d-flex.flex-column.justify-content-center.gap-1.w-15
    each course in courses 
        .d-flex.flex-column
            h2.fs-6.course_name #{course.name}
            ol.gap-2#courseSections(type=1)
                each section in course.sections
                    li.font-weight-normal
                        a(href=`/sectionPage/${section.id}`).text-dark.text-decoration-none #{section.name}

block content
    h1.sectionHeader #{name}
    iframe.ratio.ratio-16x9(width=640 height=480 src=`https://www.youtube.com/embed/${link}` title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
    form(action=`./testPage/${test_id}`)
        input.btn.btn-primary(type='submit' value='Перейти к тесту')



